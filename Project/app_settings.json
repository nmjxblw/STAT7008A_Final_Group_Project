{
  "system_config": {
    "database_path": "DB/app_database.db",
    "ip_address": {
      "host": ["127.0.0.1", "localhost"],
      "port": [8080]
    }
  },
  "crawler_config": {
    "trigger_time": "8:00AM,UTC+08:00",
    "crawling_source_list": [
      "https://arxiv.org/catchup/cs.CV/2025-09-30?abs=True"
    ],
    "blocked_sites": ["config from json"],
    "crawling_keywords": ["[Pp]aper", "[Ee]ssay"],
    "file_type": [".pdf"],
    "timeliness": 365,
    "max_workers": 5,
    "request_timeout": 30,
    "retry_attempts": 3,
    "save_directory": "Resource/Unclassified"
  },
  "logging_config": {
    "log_file_path": "logs/app.log",
    "log_level": "INFO",
    "max_log_file_size": 10485760,
    "backup_count": 5,
    "log_format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  },
  "answer_generator_config": {
    "api_key": "YOUR_DEEPSEEK_API_KEY_HERE",
    "base_url": "https://api.deepseek.com/v1",
    "model": "deepseek-chat",
    "temperature": 1.0,
    "max_tokens": null,
    "system_prompt": "你是一个有帮助的AI助手。请用中文回答问题，保持友好和专业。",
    "save_responses": true,
    "response_save_dir": "DeepSeek_Responses"
  },
  "file_classifier_config": {
    "model": "file-classifier",
    "api_key": "YOUR_FILE_CLASSIFIER_API_KEY_HERE",
    "base_url": "https://api.fileclassifier.com/v1",
    "timeout": 30
  }
}
